<?xml version="1.0"?>
<template
    format="4"
    revision="4"
    name="Java Library"
    description="Creates a new Java library.">

    <thumbs>
        <thumb>template_new_project.png</thumb>
    </thumbs>

    <category value="Applications" />

    <parameter
        id="projectName"
        name="Library name"
        type="string"
        constraints="nonempty|module|unique"
        default="lib"/>

    <parameter
        id="packageName"
        name="Java package name"
        type="string"
        constraints="nonempty|package"
        default="com.example"/>

    <parameter
        id="className"
        name="Java class name"
        type="string"
        constraints="nonempty|class"
        default="MyClass"/>

    <parameter
        id="makeIgnore"
        name="Create .gitignore file"
        type="boolean"
        default="true" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
